<%= link_to '/' do %>
  <span class="small-button back-button font-light-blue"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></span>
<% end %>
<div class="banner">
  <h1 class="font-light-blue">Welcome</h1>
</div>
<div class="main-space">
<%= form_for(@user,  url: "/access", method: :post) do |form| %>
  <div class="field">
    <%= form.label :name, "Enter your name", class: "text-label font-med-blue" %><br><br>
    <%= form.text_field :name, class: "text-input" %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= form.submit 'Sign In', :class => "pseudo-button green"%>
  </div>
<% end %>
</div>
