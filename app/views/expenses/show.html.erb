<%= link_to expenses_path do %>
  <span class="small-button back-button font-light-blue"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></span>
<% end %>
<div class="banner group-info">
  <img class="object-image" src=<%= get_group_icon(@expense) %> alt="" />
  <br><br>
  <h1>Name: <%= @expense.name %></h1>
  <br>
  <h1>&#128184; : $<%= ActiveSupport::NumberHelper.number_to_delimited(@expense.amount) %></h1>
  <br>
  <h3>Created on: <%= @expense.created_at.strftime('%e-%b-%Y')%></h3>
  <br>
  <%= link_to @expense_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <span class="pseudo-button control-button red">Delete</span>
  <% end %>
</div>
