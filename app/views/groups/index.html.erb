<p id="notice"><%= notice %></p>
<%= link_to "/users/#{session[:user_id]}" do %>
  <span class="small-button back-button font-light-blue"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></span>
<% end %>
<div class="banner">
  <h1><%= session[:user_name].capitalize%>'s Groups</h1>
</div>

<% @groups.each do |group| %>
  <%= link_to group do %></td>
    <div class="object-display">
      <img class="object-image" src=<%= group.icon %> alt="" />
      <div class="object-info group">
        <h3><%= group.name %></h3>
        <%= group.created_at.strftime('%e-%b-%Y') %>
      </div>
    </div>
  <% end %>
<% end %>

<%= link_to new_group_path do %>
  <span class="pseudo-button green new-expense">New Group</span>
<% end %>
