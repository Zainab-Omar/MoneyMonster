<%= link_to '/groups' do %>
  <span class="small-button back-button font-light-blue"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></span>
<% end %>
<div class="banner group-info">
  <img class="object-image" src=<%= @group.icon %> alt="" />
  <br><br>
  <h1>Group: <%= @group.name %></h1>
  <br>
  <h3>Created by: <%= @group.creator.name%></h3>
  <br>
  <h3>Created on: <%= @group.created_at.strftime('%e-%b-%Y')%></h3>
  <br>
  <%= link_to group_path(@group.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
    <span class="pseudo-button control-button red">Delete</span>
  <% end %>
</div>

<%= information_rendering %>
<br><br>

<h1 class="font-light-blue">Expenses for this group</h1>

<div class="items-list">
  <%= render partial: "layouts/expenselist", locals: { expenses: @group_expenses } %>
</div>

<%= link_to "/expenses/new/#{@group.id}" do %>
  <span class="pseudo-button green new-expense">New Expense</span>
<% end %>
